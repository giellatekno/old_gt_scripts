#!/bin/bash
# $Id$
# This script is written by BÃ¸rre Gaup, and is licensed under the
# GPL, version 2 or later.
#
# Shell script for exporting divvun.no and giellaktekno www-pages from cvs 
# to the official www-directory
#
# To get cvs ssh working without password prompting:
# ssh-keygen -t rsa
# <just type enter to all questions>ll
# chmod 0644 .ssh/id_rsa.pub
# scp id_rsa.pub <user>@cochise.uit.no:.ssh/authorized_keys2
FORREST_HOME=/home/giella/apache-forrest-0.7
PATH=$PATH:$FORREST_HOME/bin
CVS_RSH=ssh
MAIL_FROM="giella@giellatekno.uit.no"
MAIL_TO="borre.gaup@samediggi.no"
# This function uses cvs to checkout the directory given as it's argument,
# or updates the given directory.

checkout()
{
    TEMPDIR=$1
    echo "Updating $TEMPDIR ..."
    cd
    if  ! [ -x $TEMPDIR ]; then
            (echo "From: $MAIL_FROM"
            echo "Subject: cvs checkout error"
            echo "TO:$MAIL_TO"
            echo "")|/usr/lib/sendmail -t
            echo "No point in continuing without any data to work on ..."
            exit 1
    else
        cd $TEMPDIR
        cvs -z4 up -dP
        if [ "$?" != "0" ]; then
                echo "cvs up failed in $TEMPDIR ..."
            (echo "From: $MAIL_FROM"
            echo "Subject: cvs update error"
            echo "TO:$MAIL_TO"
            echo "")|/usr/lib/sendmail -t
            exit 1
        fi
        cd doc
        cvs -z4 up -dP
        if [ "$?" != "0" ]; then
                echo "cvs up failed $TEMPDIR/doc ..."
            (echo "From: $MAIL_FROM"
            echo "Subject: cvs update error"
            echo "TO:$MAIL_TO"
            echo "")|/usr/lib/sendmail -t
            exit 1
        fi
        cd
    fi
}

# This function uses the 'checkout' function to update or checkout
# the two directories used in the giellatekno and divvun sites.
# It also makes a symbolic link to gt/doc in the gtuit and sd sites, 
# making complete 'forrest-trees' out of both xtdoc/sd and xtdoc/gtuit

fetch_giella_and_divvun()
{
    for CVS_DIR in xtdoc/sd/src/documentation/content/xdocs xtdoc/gtuit/src/documentation/content/xdocs
    do
        checkout $CVS_DIR
    done

}

# This function validates the documents in the xtdoc/sd and xtdoc/gt 
# directories.
# If successfull it copies the relevant files to the tomcat-servers 
# directories, else it sends an e-mail to the site administrator.

validate_sites()
{
    ERROR_FILE="$HOME/forrest-validation-error.txt"
    touch $ERROR_FILE
    for SITE in sd gtuit
    do
        cd $HOME/xtdoc/$SITE

        # Validate the docs, redirect error output to the ERROR_FILE
        echo "Validating docs in $SITE ..."
        forrest validate-xdocs > /dev/null #2>>$ERROR_FILE

        # $? is the status of the last executed program.
        # 0 is success, anything else indicates some kind of error
        if [ "$?"  == "0" ]
        then
            if  [ "$SITE" == "sd" ]
            then
                GOAL="divvun-no"
            else
                GOAL="giellatekno"
            fi
            cd src/documentation/content/xdocs/
            rm -rf doc/admin/projman/Projects
            echo "copying files to tomcat5 dir $GOAL..."
            # Find only files that belong to the documentation, and copy them
            tar cf - `find . ! \( -name CVS -o -name Root -o -name Repository -o -name "Entries*" -o -name .cvsignore -o -type d \)` | sudo -u tomcat5 /bin/tar xf - -C /var/lib/tomcat5/webapps/$GOAL/project/src/documentation/content/xdocs/
            if [ "$?"  != "0" ]
            then
                (
                echo "From: $MAIL_FROM"
                echo "Subject: Error copying files to webapps dir"
                echo "TO:$MAIL_TO"
                echo ""
                )|/usr/lib/sendmail -t
                echo "sudo -u tomcat5 failed ......"
            fi
        else
            echo "Sending error mail ..."
            (
            echo "From: $MAIL_FROM"
            echo "Subject: Error validating files in $SITE"
            echo "TO:$MAIL_TO"
            echo ""
            cat $ERROR_FILE
            )|/usr/lib/sendmail -t
        fi
    done
}

fetch_giella_and_divvun
validate_sites

echo "Done updating giellatekno and divvun:-)!"
