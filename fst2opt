#!/bin/bash

#****************************************************************
#			fst2opt
#			written by Saara Huhmarniemi
#
#           Copy the analyzator to web-directory
# $Id$
#****************************************************************

PATH=$PATH:/opt/xerox/bin

cvs -d /usr/local/cvs/repository checkout -d /usr/tmp/gt gt
for lang in "sme" "smj" "sma"
do
		cd /usr/tmp/gt/ && make TARGET=$lang

		cp /usr/tmp/gt/$lang/bin/$lang.fst /opt/smi/$lang/bin/
		cp /usr/tmp/gt/$lang/bin/i$lang.fst /opt/smi/$lang/bin/
		cp /usr/tmp/gt/$lang/bin/hyph-$lang.fst /opt/smi/$lang/bin/
		cp /usr/tmp/gt/$lang/src/$lang-dis.rle /opt/smi/$lang/bin/
		cp /usr/tmp/gt/$lang/bin/abbr.txt /opt/smi/$lang/bin/

		chgrp cvs /opt/smi/$lang/bin/*
		chmod a+x /opt/smi/$lang/bin/*
done
